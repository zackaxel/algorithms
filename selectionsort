#include <iostream>
#include <vector>

void SelectionSort(std::vector<int> A, std::vector<int> a);

int main() {
    
    
    std::vector<int> A;
    
    std::vector<int> a;
    
    int array_size;
    
    std::cout<< "Please enter the size of array you wish to sort";
    std::cin >> array_size;
    
    std::cout <<"Please enter the values you wish to have in the array";
    
    for(int i = 0; i < array_size; i++){
        
        int tmp;
        
        std::cin >> tmp;
        
        A.push_back(tmp);
        
    }
    
    
    
    
    
    
    
   SelectionSort(a, A);

   
    return 0;
}

void SelectionSort(std::vector<int> A, std::vector<int> a){
    
    int maxIndex = 0;
    int i;
    int tmp;
    
    for(i = 0; i < A.size() - 2; i++){
        maxIndex = i;}
        for(int j = i + 1; i < A.size() - 1; j++){
            if(a[j] < A[maxIndex]){
                maxIndex = j;
                tmp = A[i];
                A[i]= A[maxIndex];
                
                
                
                
                
                
                
                
                A[maxIndex] = tmp;
                
                
                
                
            }
            
            
            
        }
    
    
    
    
    
    
    
    
    
    
        
        
        
        
        
}
























